# ===== Basic app config =====
NODE_ENV=development
PORT=5050

# ===== Database =====
# Adjust user/password/db/host as you use locally or in prod
DATABASE_URL=postgresql://user:password@localhost:5432/speexify

# ===== Sessions & cookies =====
SESSION_SECRET=change-me-in-production
COOKIE_DOMAIN=localhost
ALLOWED_ORIGINS=http://localhost:3000

# ===== Payments (Paymob) =====
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_INTEGRATION_ID=your-integration-id
PAYMOB_IFRAME_ID=your-iframe-id
PAYMOB_HMAC_SECRET=your-hmac-secret

# ===== Emails (Brevo) =====
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM="Speexify <no-reply@speexify.com>"

# ===== Sentry (backend) â€“ optional =====
SENTRY_DSN_BACKEND=

# ===== Logging =====
LOG_LEVEL=debug

# ===== Misc =====
BOOK_LANG=en
ALLOW_LEGACY_REGISTER=false
